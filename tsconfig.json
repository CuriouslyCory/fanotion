{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    ".eslintrc.cjs",
    "tsup.config.ts",
    "reset.d.ts",
    "prettier.config.mjs",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
